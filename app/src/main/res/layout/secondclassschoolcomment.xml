<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginBottom="15sp"
              android:layout_height="match_parent"
              android:background="@drawable/selectbutton5"
              android:id="@+id/main_layout"
              android:orientation="vertical">

    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:id="@+id/header_layout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                    android:id="@+id/img_item_card"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="50sp"
                    android:layout_height="50sp"
                    app:cardCornerRadius="100dp"
                    app:cardElevation="0dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_avatar"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:minWidth="60sp"
                        android:minHeight="60sp">
                </ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/user_name"
                        android:textSize="16sp"
                        android:text="王大锤"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textStyle="bold">

                </TextView>
                <TextView
                        android:id="@+id/user_depart"
                        android:textColor="@color/grey"
                        android:textSize="8sp"
                        android:text="人工智能学院      人工智能"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>
                <TextView
                        android:id="@+id/comment_time"
                        android:textColor="@color/grey"
                        android:textSize="8sp"
                        android:text="星期五"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />
                <ImageView
                        android:id="@+id/delete_comment_button"
                        android:layout_marginRight="10dp"
                        android:layout_width="30sp"
                        android:layout_height="30sp">
                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/content_layout"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/comment_content"
                    android:text="请问一下,学时是每个学期100,还是每年100满分,我大一上申报了一次,大一下还用申报吗"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </TextView>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/comment_image1"
                        android:maxWidth="120dp"
                        android:maxHeight="200dp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                        android:id="@+id/comment_image2"
                        android:maxWidth="120dp"
                        android:maxHeight="200dp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </ImageView>
                <ImageView
                        android:id="@+id/comment_image3"
                        android:maxWidth="120dp"
                        android:maxHeight="200dp"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="4sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/activity_type"
                    android:textColor="@color/yellow"
                    android:text="#校园文化活动"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:textStyle="bold">
            </TextView>
            <LinearLayout
                    android:gravity="right"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/like_button"
                        android:layout_marginRight="15dp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/comment_like_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/likeicon1"
                            android:layout_width="20sp"
                            android:layout_height="20sp">

                    </ImageView>
                    <TextView
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="right"
                            android:id="@+id/comment_like"
                            android:text="10"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textStyle="bold">
                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/comment_button"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/comment_count_icon"
                            android:layout_gravity="center"
                            android:src="@drawable/commenticon1"
                            android:layout_width="20sp"
                            android:layout_height="20sp">

                    </ImageView>
                    <TextView
                            android:textColor="@color/black"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:gravity="center"
                            android:id="@+id/comment_count"
                            android:text="10"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:textStyle="bold">
                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
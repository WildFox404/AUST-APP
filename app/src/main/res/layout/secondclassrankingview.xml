<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout7">
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView

                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:text="排行榜"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#244CAA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                </TextView>
                <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/exitButton"
                        app:srcCompat="@drawable/exit_button"
                        android:layout_marginEnd="25dp">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                        android:id="@+id/img_item_card"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        app:cardCornerRadius="100dp"
                        app:cardElevation="0dp">
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/user_avatar"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:minWidth="50sp"
                            android:minHeight="50sp">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/user_name"
                            android:textSize="16sp"
                            android:text="王大锤"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:id="@+id/user_major"
                            android:textColor="@color/grey"
                            android:textSize="6sp"
                            android:text="信息与计算科学"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:text="学分"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:textColor="@color/yellow"
                            android:id="@+id/my_score"
                            android:textSize="10sp"
                            android:text="26.9152"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:text="学时"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:gravity="center"
                            android:textColor="@color/yellow"
                            android:id="@+id/my_hours"
                            android:textSize="10sp"
                            android:text="26.9152"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:textSize="12sp"
                            android:text="排名"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:gravity="center"
                            android:textColor="@color/grey"
                            android:id="@+id/my_ranking"
                            android:textSize="10sp"
                            android:text="1000"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>

                </LinearLayout>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:layout_weight="1">
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:background="@drawable/selectbutton2"
                            android:layout_gravity="right"
                            android:layout_width="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_height="match_parent" android:layout_weight="1">
                        <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/rankingSpinner"
                                android:entries="@array/rankingOptions"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>
            <com.google.android.material.divider.MaterialDivider
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
            </com.google.android.material.divider.MaterialDivider>
            <ScrollView
                    android:id="@+id/ranking_scrollview"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:id="@+id/ranking_list"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                </LinearLayout>
            </ScrollView>
            <TextView
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

            </TextView>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
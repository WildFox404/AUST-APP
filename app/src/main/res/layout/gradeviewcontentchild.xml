<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_marginBottom="15sp"
              android:layout_height="match_parent"
              android:background="@drawable/selectbutton5"
              android:id="@+id/main_layout"
              android:orientation="vertical">

    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"

                android:layout_height="wrap_content">

        </com.google.android.material.divider.MaterialDivider>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/dragon_icon"
                    android:layout_gravity="center"
                    android:src="@drawable/dragon1"
                    android:layout_width="45sp"
                    android:layout_height="45sp">

            </ImageView>
            <TextView
                    android:layout_gravity="center"
                    android:id="@+id/course_name_child"
                    android:text="习近平新时代中国特色社会主义"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold|italic">

            </TextView>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/score_icon"
                    android:layout_width="22sp"
                    android:layout_height="22sp">

            </ImageView>
            <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/score"
                    android:text="成绩:30.5"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold">

            </TextView>
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/credit_icon"
                    android:layout_width="22sp"
                    android:layout_height="22sp">

            </ImageView>
            <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/credit"
                    android:text="学分:30.5"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold">

            </TextView>
            <ImageView
                    android:layout_gravity="center"
                    android:src="@drawable/gpa_icon"
                    android:layout_width="22sp"
                    android:layout_height="22sp">

            </ImageView>
            <TextView
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:id="@+id/gpa"
                    android:text="绩点:3.18"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold">

            </TextView>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

        </com.google.android.material.divider.MaterialDivider>
    </LinearLayout>
</LinearLayout>

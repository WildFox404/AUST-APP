<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_marginBottom="5sp"
              android:layout_height="match_parent"
              android:id="@+id/main_layout"
              android:orientation="vertical">

    <LinearLayout
            android:background="@drawable/selectbutton5"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/image"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/activityexample"
                    android:layout_width="80sp"
                    android:layout_height="80sp">
            </ImageView>
            <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:id="@+id/score"
                            android:textSize="12sp"
                            android:text="0学时"
                            android:textColor="@color/yellow"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:id="@+id/activity_name"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:text="2023-2024学年第二学期志愿服务通道"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold">
                    </TextView>
                </LinearLayout>
                <TextView
                        android:id="@+id/activity_type"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        android:text="社会责任担当"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>
                <TextView
                        android:id="@+id/activity_time"
                        android:textColor="@color/grey"
                        android:textSize="14sp"
                        android:text="2024.07.15 00:00--2024.08.22 00:00"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="4sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <ImageView
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:src="@drawable/activityorganizationicon"
                    android:layout_width="30sp"
                    android:layout_height="30sp">
            </ImageView>
            <LinearLayout
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/organizationName"
                        android:layout_weight="1"
                        android:textColor="@color/grey"
                        android:text="校团委"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textColor="@color/yellow"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:id="@+id/address"
                        android:layout_weight="1"
                        android:text="线上"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textStyle="bold">
                </TextView>
                <TextView
                        android:textColor="@color/yellow"
                        android:layout_gravity="right"
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:id="@+id/enroll"
                        android:layout_weight="1"
                        android:text="可报名"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textStyle="bold">
                </TextView>
                <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="right"
                        android:id="@+id/enroll_count"
                        android:layout_weight="1"
                        android:text="1181/20000"
                        android:textSize="12sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:textStyle="bold">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
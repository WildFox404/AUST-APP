<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/linearLayout3">
        <ImageView
                android:src="@drawable/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:alpha="0.6"
        >
        </ImageView>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout7">
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView

                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:text="用户主页"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#244CAA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                </TextView>
                <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/exitButton"
                        app:srcCompat="@drawable/exit_button"
                        android:layout_marginEnd="25dp">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
                android:id="@+id/user_info_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:background="@drawable/selectbutton5"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:layout_marginTop="10dp"
                            android:id="@+id/img_item_card"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            app:cardCornerRadius="100dp"
                            app:cardElevation="0dp">
                        <ImageView
                                android:src="@drawable/user_avatar_boy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/user_avatar"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:minWidth="85sp"
                                android:minHeight="85sp">
                        </ImageView>
                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/name"
                                android:layout_weight="1"
                                android:text="姓名:王大锤"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/collegeName"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="学院:土木建筑学院"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/politicsName"
                                android:layout_weight="1"
                                android:text="政治面貌:团员"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/majorName"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="专业:建筑学"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/gender"
                                android:layout_weight="1"
                                android:text="性别:其他"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/organizationName"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="组织:"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_weight="1"
                                android:text="加入组织"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/organizationCount"
                                android:gravity="right"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="共1个>"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_weight="1"
                                android:text="广场动态"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/dynamicCount"
                                android:gravity="right"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="共1个>"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="个人标签"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/personTag"
                                android:gravity="center"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text=""
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/follow_textview"
                            android:background="@drawable/button_background"
                            android:gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="关注"
                            android:layout_width="match_parent"
                            android:minHeight="30sp"
                            android:layout_height="30sp" android:textStyle="bold">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:background="@drawable/selectbutton5"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/activityCount"
                                android:layout_weight="1"
                                android:text="参加活动>共1个"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/hours"
                                android:textColor="@color/grey"
                                android:layout_weight="1"
                                android:text="学时:256.5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/layout_content"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
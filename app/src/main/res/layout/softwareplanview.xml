                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t推荐活动"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t成绩查询"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t诚信值查询"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t我的奖惩"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t校园动态(校友圈)"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t待办事项"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="铁塔充吧"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="\t\t\t校园充电桩空闲查询"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </TextView>
                <TextView
                        android:textSize="20dp"
                        android:text="通用软件快捷方式"

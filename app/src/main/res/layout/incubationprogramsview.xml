<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="586dp"
            android:layout_height="819dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:srcCompat="@drawable/top"
            android:layout_marginTop="-580dp" android:id="@+id/imageView55"/>
    <TextView
            android:text="培养方案"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#244CAA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="12dp"
            android:layout_marginTop="12dp" android:id="@+id/activityheader"/>
    <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp" android:id="@+id/exitButton"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/activityheader"
            app:srcCompat="@drawable/exit_button" android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="@+id/activityheader"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="650dp" app:layout_constraintTop_toBottomOf="@+id/activityheader"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp" android:id="@+id/linearLayout5">
        <ScrollView android:layout_width="match_parent"
                    android:layout_height="match_parent">
            <LinearLayout
                    android:id="@+id/incubation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <LinearLayout
                        android:id="@+id/incubation1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView 
                            android:src="@drawable/incubation1"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp" 
                            android:layout_height="60dp">
                        
                    </ImageView>
                    <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                            android:textSize="20dp"
                            android:text="方案内容"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                        android:id="@+id/incubation2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:src="@drawable/incubation2"
                            android:layout_gravity="center_vertical"
                            android:layout_width="40dp"
                            android:layout_height="60dp">

                    </ImageView>
                    <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content">

                    </TextView>
                    <TextView
                            android:textSize="20dp"
                            android:text="方案课程"
                            android:layout_marginRight="20dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
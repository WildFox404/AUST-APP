<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_marginBottom="15sp"
              android:layout_height="match_parent"
              android:background="@drawable/selectbutton5"
              android:id="@+id/main_layout"
              android:orientation="vertical">

    <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/course_name"
                android:text="思想道德修养与法律基础"
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:textStyle="bold">

        </TextView>
        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/selectbutton4"
                    android:layout_width="match_parent"
                    android:layout_height="65sp">
                <LinearLayout
                        android:layout_margin="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:src="@drawable/time_icon"
                            android:layout_weight="1"
                            android:layout_width="20sp"
                            android:layout_height="20sp">

                    </ImageView>
                    <TextView
                            android:id="@+id/date"
                            android:layout_weight="1"
                            android:text="2023-02-21"
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                    <TextView
                            android:id="@+id/time"
                            android:layout_gravity="right"
                            android:layout_weight="1"
                            android:text="09:00-11:00"
                            android:textSize="13sp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/selectbutton4"
                    android:layout_width="match_parent"
                    android:layout_height="65sp">
                <LinearLayout
                        android:layout_margin="12dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <ImageView
                            android:src="@drawable/location_icon"
                            android:layout_weight="1"
                            android:layout_width="20sp"
                            android:layout_height="20sp">

                    </ImageView>
                    <TextView
                            android:id="@+id/location"
                            android:textSize="13sp"
                            android:text="校本部天工楼天工203"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:textStyle="bold">

                    </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="4sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="8sp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/test_type"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:text="考试类型:期末考试"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold">
            </TextView>
            <TextView
                    android:id="@+id/test_status"
                    android:layout_weight="1"
                    android:textColor="@color/grey"
                    android:text="考试情况:已完成"
                    android:textSize="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textStyle="bold">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <LinearLayout
            android:id="@+id/root"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_height="wrap_content" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/linearLayout7">
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView

                        android:layout_gravity="center"
                        android:layout_weight="5"
                        android:text="成绩单"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        android:textColor="#244CAA"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp">

                </TextView>
                <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:id="@+id/exitButton"
                        app:srcCompat="@drawable/exit_button"
                        android:layout_marginEnd="25dp">

                </ImageView>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="15dp"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/user_name"
                                android:textSize="16sp"
                                android:text="王大锤"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" android:textStyle="bold">

                        </TextView>
                        <TextView
                                android:id="@+id/user_depart"
                                android:textColor="@color/grey"
                                android:textSize="8sp"
                                android:text="人工智能学院"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                        <TextView
                                android:id="@+id/user_major"
                                android:textColor="@color/grey"
                                android:textSize="8sp"
                                android:text="人工智能"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </com.google.android.material.divider.MaterialDivider>
                <LinearLayout
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selectbutton3"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/hours"
                                android:layout_margin="5dp"
                                android:textColor="@color/fire_red"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="276.8"
                                android:textSize="15sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                        <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="总学时"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selectbutton3"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/score"
                                android:layout_margin="5dp"
                                android:textColor="@color/green1"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textSize="15sp"
                                android:text="8.6555"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                        <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="学分"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:background="@drawable/selectbutton3"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        <TextView
                                android:id="@+id/grade"
                                android:layout_margin="5dp"
                                android:textColor="@color/fire_red"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="2022"
                                android:textSize="15sp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                        <TextView
                                android:layout_margin="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="年纪"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                        </TextView>
                    </LinearLayout>
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                </com.google.android.material.divider.MaterialDivider>
                <LinearLayout
                        android:id="@+id/graph_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/grade_list_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                </LinearLayout>
                <TextView
                        android:id="@+id/ranking_textview"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:text="排行榜"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                </TextView>
                <TextView
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="30dp">

                </TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>